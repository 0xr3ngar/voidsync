{
    "name": "voidsync",
    "description": "Conquer the void of scattered playlists. Sync YouTube, Spotify, and SoundCloud to dominate the Rift and reign over the beats.",
    "version": "0.0.1",
    "author": "0xr3ngar",
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@types/bun": "^1.3.0",
        "@types/node": "^24.7.2",
        "knip": "^5.64.3",
        "syncpack": "^14.0.0-alpha.23",
        "typescript": "^5.9.3",
        "ink-testing-library": "^4.0.0"
    },
    "devEngines": {
        "runtime": {
            "name": "bun",
            "onFail": "error"
        },
        "packageManager": {
            "name": "bun",
            "onFail": "error"
        }
    },
    "bin": {
        "voidsync": "dist/index.js"
    },
    "keywords": [
        "voidsync",
        "youtube",
        "spotify",
        "soundcloud",
        "music",
        "playlist",
        "sync",
        "migrate"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "scripts": {
        "biome:check": "biome check --write ./src/",
        "biome:format": "biome format --write ./src/",
        "biome:lint": "biome lint --write ./src/",
        "build": "bun build src/index.tsx --outdir dist --target bun --external ink --external ink-big-text --external ink-gradient --external ink-link --external ink-spinner --external ink-text-input --external react --external conf --external googleapis --external google-auth-library",
        "check": "bun run typecheck && bun run biome:check && bun run knip",
        "deps:check": "syncpack update --check",
        "deps:format": "syncpack format",
        "deps:update": "syncpack update && bun install",
        "dev": "bun run --watch src/index.tsx",
        "knip": "knip",
        "start": "bun run src/index.tsx",
        "build-run": "bun run build && voidsync",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "typecheck": "tsc --noEmit"
    },
    "type": "module",
    "dependencies": {
        "conf": "^15.0.2",
        "google-auth-library": "^10.4.0",
        "googleapis": "^162.0.0",
        "ink": "^6.3.1",
        "ink-big-text": "^2.0.0",
        "ink-gradient": "^3.0.0",
        "ink-link": "^5.0.0",
        "ink-spinner": "^5.0.0",
        "ink-text-input": "^6.0.0",
        "react": "^19.2.0"
    }
}
