{
    "name": "voidsync",
    "description": "Conquer the void of scattered playlists. Sync YouTube, Spotify, and SoundCloud to dominate the Rift and reign over the beats.",
    "version": "0.0.1",
    "author": "0xr3ngar",
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@types/bun": "^1.3.0",
        "@types/node": "^24.7.2",
        "knip": "^5.64.3",
        "syncpack": "^14.0.0-alpha.23",
        "typescript": "^5.9.3"
    },
    "devEngines": {
        "runtime": {
            "name": "bun",
            "onFail": "error"
        },
        "packageManager": {
            "name": "bun",
            "onFail": "error"
        }
    },
    "bin": {
        "voidsync": "dist/index.js"
    },
    "keywords": [
        "voidsync",
        "youtube",
        "spotify",
        "soundcloud",
        "music",
        "playlist",
        "sync",
        "migrate"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "scripts": {
        "biome:check": "biome check --write ./src/",
        "biome:format": "biome format --write ./src/",
        "biome:lint": "biome lint --write ./src/",
        "build": "bun build src/index.ts --outdir dist --target bun",
        "check": "bun run typecheck && bun run biome:check && bun run knip",
        "deps:check": "syncpack update --check",
        "deps:format": "syncpack format",
        "deps:update": "syncpack update && bun install",
        "dev": "bun run --watch src/index.ts",
        "knip": "knip",
        "start": "bun run src/index.ts",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "typecheck": "tsc --noEmit"
    },
    "type": "module"
}
